class Solution {
public:
    int minimumOperations(vector<int>& nums) {
    int n = nums.size();
    sort(nums.begin(),nums.end());
     int operation = 0;

        for(int i = 0; i < n; i++){
          if(nums[i] == 0)continue;
          int yoyo = nums[i];
          
          int count = 0;
          for(int j = i; j < n; j++){
                if(nums[j] != 0){
                    nums[j] = nums[j] - yoyo;
                    count++;
                }
                
          }
                 if(count != 0){
                    operation++;
                   }
              
        }
        return operation;
    }
};
